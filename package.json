{
  "name": "andybluntish.com",
  "version": "14.0.0",
  "scripts": {
    "build": "yarn clean && NODE_ENV=production yarn html && NODE_ENV=production yarn styles",
    "dev": "yarn clean && yarn html --serve & yarn styles --watch",
    "clean": "rm -rf dist",
    "html": "eleventy .",
    "styles": "postcss ./src/styles.css -d ./dist",
    "lint": "yarn run eslint .",
    "format": "yarn run format:prettier; yarn run format:eslint",
    "format:prettier": "yarn run prettier --write './**/*.{js,json}'",
    "format:eslint": "yarn run eslint --fix './**/*.js'",
    "note:new": "./scripts/new-note.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andybluntish/andybluntish.com.git"
  },
  "author": "Andy Stanford-Bluntish <andy@bluntish.net>",
  "license": "UNLICENSED",
  "private": true,
  "homepage": "https://andybluntish.com",
  "dependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@11ty/eleventy-navigation": "^0.1.6",
    "@11ty/eleventy-plugin-rss": "^1.0.9",
    "autoprefixer": "^10.0.1",
    "cssnano": "^4.1.10",
    "html-minifier": "^4.0.0",
    "markdown-it": "^11.0.1",
    "postcss": "^8.1.1",
    "postcss-cli": "^8.1.0",
    "tailwindcss": "^1.8.13"
  },
  "devDependencies": {
    "eslint": "^7.10.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^2.1.2"
  },
  "resolutions": {
    "nunjucks": "^3.2.2"
  }
}
