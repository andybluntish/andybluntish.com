{
  "name": "andybluntish.com",
  "version": "14.5.0",
  "scripts": {
    "build": "BUILD_ENV=production eleventy",
    "test": "jest",
    "lint": "eslint .",
    "format": "eslint --fix .",
    "clean": "rm -r dist > /dev/null 2>&1",
    "start": "eleventy --serve",
    "start:prod": "yarn clean && yarn build && python -m http.server -d ./dist",
    "subset-fonts": "yarn clean && yarn build && glyphhanger dist/**/*.html --subset=fonts/Mona-Sans.woff2 --formats=woff2 --css --output=fonts && mv fonts/Mona-Sans-subset.woff2 src/fonts/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andybluntish/andybluntish.com.git"
  },
  "author": "Andy Stanford-Bluntish <andybluntish@gmail.com>",
  "license": "UNLICENSED",
  "private": true,
  "homepage": "https://andybluntish.com",
  "engines": {
    "node": ">=16"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0",
    "@11ty/eleventy-fetch": "^3.0.0",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@11ty/eleventy-plugin-webc": "^0.9.3",
    "@11ty/eleventy-upgrade-help": "^2.0.5",
    "cheerio": "^1.0.0-rc.12",
    "clean-css": "^5.3.2",
    "dotenv": "^16.0.3",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "html-minifier": "^4.0.0",
    "jest": "^29.5.0",
    "markdown-it": "^13.0.1",
    "prettier": "^2.8.7",
    "purgecss": "^5.0.0"
  }
}
