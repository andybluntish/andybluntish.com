{
  "name": "andybluntish.com",
  "version": "14.0.0",
  "scripts": {
    "build": "yarn clean && NODE_ENV=production yarn html && NODE_ENV=production yarn styles",
    "dev": "yarn clean && yarn html --serve & yarn styles --watch",
    "clean": "rm -rf dist",
    "html": "eleventy .",
    "styles": "postcss ./src/assets/styles.css -d ./dist/assets",
    "lint": "yarn run eslint .",
    "format": "yarn run format:prettier; yarn run format:eslint",
    "format:prettier": "yarn run prettier --write './**/*.{js,json,css,md}'",
    "format:eslint": "yarn run eslint --fix './**/*.js'",
    "test": "jest",
    "note:new": "node ./scripts/new-note.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andybluntish/andybluntish.com.git"
  },
  "author": "Andy Stanford-Bluntish <andy@bluntish.net>",
  "license": "UNLICENSED",
  "private": true,
  "homepage": "https://andybluntish.com",
  "dependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@11ty/eleventy-cache-assets": "^2.0.3",
    "@11ty/eleventy-navigation": "^0.1.6",
    "@11ty/eleventy-plugin-rss": "^1.0.9",
    "autoprefixer": "^10.1.0",
    "cssnano": "^4.1.10",
    "dotenv": "^8.2.0",
    "html-minifier": "^4.0.0",
    "markdown-it": "^12.0.3",
    "postcss": "^8.2.1",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.0.2"
  },
  "devDependencies": {
    "eslint": "^7.15.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1"
  }
}
